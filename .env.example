# Email Configuration Example
# Copy this to .env.local and update with your credentials

# Gmail Configuration
VITE_EMAIL_USER=your-email@gmail.com
VITE_EMAIL_PASSWORD=your-app-password
VITE_IMAP_HOST=imap.gmail.com
VITE_IMAP_PORT=993
VITE_IMAP_SECURE=true
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false

# Generic Configuration (adjust based on your provider)
# VITE_EMAIL_USER=your-email@yourdomain.com
# VITE_EMAIL_PASSWORD=your-password
# VITE_IMAP_HOST=imap.yourdomain.com
# VITE_IMAP_PORT=993
# VITE_IMAP_SECURE=true
# VITE_SMTP_HOST=smtp.yourdomain.com
# VITE_SMTP_PORT=587
# VITE_SMTP_SECURE=false

# Optional: Electron settings
VITE_ELECTRON_DEV=true
